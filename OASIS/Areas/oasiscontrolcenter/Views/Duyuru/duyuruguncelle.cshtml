@model OASIS.Models.Entity.notice
@{
    ViewBag.Title = "Duyuru Güncelle";
    Layout = "~/Areas/oasiscontrolcenter/Views/Shared/_Layout.cshtml";
}

    <div class="content-wrapper">
        <div class="card-body">
            <h2>Duyuru Güncelle</h2>
            @using (Html.BeginForm("dguncelle", "Duyuru", FormMethod.Post))
            {
                <table id="example1" class="table table-bordered table-striped">
                    <tr>
                        <td>
                            <p>Firma</p>
                            @Html.DropDownListFor(m => m.company.companyid, (List<SelectListItem>)ViewBag.CompanyList, new { @class = "form-control", @required = "required" })

                        </td>
                        <td>
                            <p>Bölge</p>
                            @Html.DropDownListFor(m => m.region.regionid, (List<SelectListItem>)ViewBag.RegionList, new { @class = "form-control", @required = "required" })

                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p>Birim</p>
                            @Html.DropDownListFor(m => m.unit.unitid, (List<SelectListItem>)ViewBag.UnitList, new { @class = "form-control", @required = "required" })

                        </td>
                        <td>
                            <p>Departman</p>
                            @Html.DropDownListFor(m => m.departman.departmanid, (List<SelectListItem>)ViewBag.DepartmanList, new { @class = "form-control", @required = "required" })

                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p>Duyuru Başlangıcı</p>
                            @Html.EditorFor(m => m.noticestart, new { htmlAttributes = new { @class = "form-control", id = "tarih1", placeholder = "Lütfen Başlangıç Tarihi Giriniz.", @required = "required" } })

                        </td>
                        <td>
                            <p>Duyuru Bitişi</p>
                            @Html.EditorFor(m => m.noticeend, new { htmlAttributes = new { @class = "form-control", id = "tarih2", placeholder = "Lütfen Bitiş Tarihi Giriniz.", @required = "required" } })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Durum Rengi: |
                            <font style="color:blue;">Çok Yüksek Öncelikli</font> | <font style="color:lime;">Yüksek Öncelikli</font> | <font style="background-color:yellow;">Normal Öncelikli</font> | <font style="color:orange;">Düşük Öncelikli</font>
                            @Html.HiddenFor(m => m.color, new { @class = "form-control", @Value = "blue", id = "colordbs", @required = "required" })
                            <select id="colordb" class="form-control">
                                <option value="blue">Çok Yüksek Öncelikli</option>
                                <option value="lime">Yüksek Öncelikli</option>
                                <option value="yellow">Normal Öncelikli</option>
                                <option value="orange">Düşük Öncelikli</option>
                            </select>
                        </td>
                        <td>
                            <p>Durum</p>
                            @Html.DropDownListFor(m => m.process.processid, (List<SelectListItem>)ViewBag.ProcessList, new { @class = "form-control", @required = "required" })

                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.HiddenFor(m => m.noticeid, new { @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td><button type="submit" class="fa fa-floppy-o btn btn-success" /> Kaydet</td>
                    </tr>
                </table>
                <table>
                    <tr>
                        Duyuru Ekle
                        @Html.TextAreaFor(m => m.notice1, new { @class = "form-control", oninput="customtext(this.id);", id = "notice1", @required = "required" })
                    </tr>
                </table>
            }

        </div>
    </div>

<script src="~/Content/Admin/plugins/custom/jquery-ui.js"></script>
<script src="~/Content/Admin/plugins/custom/oasiscustom.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        oasisdatepicker();
    });
</script>
