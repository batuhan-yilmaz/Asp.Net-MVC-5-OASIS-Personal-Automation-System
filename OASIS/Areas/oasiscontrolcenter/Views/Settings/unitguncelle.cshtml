@model OASIS.Models.Entity.unit

@{
    ViewBag.Title = "Birim Güncelle";
    Layout = "~/Areas/oasiscontrolcenter/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="card-body">
        <h2>Birim Güncelle</h2>
        @using (Html.BeginForm("uguncelle", "Settings", FormMethod.Post))
        {
            <table id="example1" class="table table-bordered table-striped">
                <tr>
                    <td>
                        <p>Bölge</p>
                        @Html.DropDownListFor(m => m.region.regionid, (List<SelectListItem>)ViewBag.RegionList, new { @class = "form-control", @required = "required" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <p>Birim</p>
                        @Html.TextBoxFor(m => m.unit1, new { oninput = "customtext(this.id);", @class = "form-control", @required = "required" })
                        @Html.HiddenFor(m => m.unitid, new { @class = "form-control", @required = "required" })
                    </td>
                </tr>
                <tr>
                    <td><button type="submit" class="fa fa-floppy-o btn btn-success" /> Kaydet</td>
                </tr>

            </table>

        }

    </div>
</div>

<script src="~/Content/Admin/plugins/custom/jquery-ui.js"></script>
<script src="~/Content/Admin/plugins/custom/oasiscustom.js"></script>

