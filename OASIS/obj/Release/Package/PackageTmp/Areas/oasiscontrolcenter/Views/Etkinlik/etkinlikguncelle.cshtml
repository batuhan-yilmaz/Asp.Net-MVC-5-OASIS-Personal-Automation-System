@model OASIS.Models.Entity.events

@{
    ViewBag.Title = "Etkinlik Güncelle";
    Layout = "~/Areas/oasiscontrolcenter/Views/Shared/_Layout.cshtml";
}

    <div class="content-wrapper">
        <div class="card-body">
            <h2>Etkinlik Güncelle</h2>
            @using (Html.BeginForm("eguncelle", "Etkinlik", FormMethod.Post))
            {
                <table id="example1" class="table table-bordered table-striped">
                    <tr>
                        <td>
                            <p>Başlık</p>
                            @Html.TextAreaFor(m => m.Subject, new { @class = "form-control", oninput="customtext(this.id);", @required = "required" })

                        </td>
                        <td>
                            <p>Açıklama</p>
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", oninput="customtext(this.id);", @required = "required" })

                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p>Etkinlik Başlangıcı</p>
                            @Html.EditorFor(m => m.Start, new { htmlAttributes = new { @class = "form-control", id = "tarih1", placeholder = "Lütfen Başlangıç Tarihi Giriniz.", @required = "required" } })

                        </td>
                        <td>
                            <p>Etkinlik Bitişi</p>
                            @Html.EditorFor(m => m.End, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", id = "tarih2", placeholder = "Lütfen Bitiş Tarihi Giriniz." } })

                        </td>
                    </tr>
                    <tr>
                        <td>
                            Durum Rengi: |
                            <font style="color:red;">Çok Yüksek Öncelik</font> | <font style="color:#007bff;">Yüksek Öncelik</font> | <font style="color:#28a745;">Normal Öncelik</font> | <font style="color:#f39c12;">Düşük Öncelik</font>
                            @Html.HiddenFor(m => m.ThemeColor, new { @class = "form-control", @Value = "red", id = "colordbs", @required = "required" })
                            <select id="colordb" class="form-control">
                                <option value="red">Çok Yüksek Öncelik</option>
                                <option value="#007bff">Yüksek Öncelik</option>
                                <option value="#28a745">Normal Öncelik</option>
                                <option value="#f39c12">Düşük Öncelik</option>
                            </select>
                        </td>
                        <td>
                            <p>Tam Gün = <font style="color:#007bff;">True</font> Veya Değil = <font style="color:red;">False</font></p>
                            @Html.HiddenFor(m => m.IsFullDay, new { @class = "form-control", @Value = "True", id = "IsFullDaydbs", @required = "required" })
                            <select id="IsFullDaydb" class="form-control" onchange="EnableDisableTextBox(this)">
                                <option value="1">True</option>
                                <option value="0">False</option>
                            </select>
                        </td>
                        <td>
                            @Html.HiddenFor(m => m.EventID, new { @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td><button type="submit" class="fa fa-floppy-o btn btn-success" /> Kaydet</td>
                    </tr>
                </table>
            }

        </div>
    </div>

<script src="~/Content/Admin/plugins/custom/jquery-ui.js"></script>
<script src="~/Content/Admin/plugins/custom/oasiscustom.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
       oasisdatepicker();
    });
</script>
