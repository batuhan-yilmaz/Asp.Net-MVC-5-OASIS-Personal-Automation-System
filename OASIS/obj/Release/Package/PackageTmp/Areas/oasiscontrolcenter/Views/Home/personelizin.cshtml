@model OASIS.Models.Entity.personel
@{
    ViewBag.Title = "personelizin";
    Layout = "~/Areas/oasiscontrolcenter/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="card-body" id="DivIdToPrint">
        <h2>İzin Talebi</h2>
        <table id="example1" class="table table-bordered table-striped">
            <tr>
                <td>
                    <p><b>Profil Fotoğrafı</b></p>
                    @if (Model.profilephoto != null)
                    {
                        <img src="~/Content/Admin/data/personel/pimg/@Model.profilephoto" width="100" height="100" />
                    }
                </td>
                <td>
                    <p><b>Firma:</b>@Model.company.company1</p>
                    <p><b>Bölge:</b>@Model.region.region1</p>
                    <p><b>Birim:</b>@Model.unit.unit1</p>
                    <p><b>Departman:</b>@Model.departman.departman1</p>
                </td>
            </tr>
            <tr>
                <td>
                    <p><b>Personel İsim Soyisim</b></p>
                    @Html.TextBoxFor(m => m.personel1, new { @readonly = "false", oninput = "text(this.id);", @class = "form-control", @required = "required" })
                </td>
                <td>
                    <p><b>Tc</b></p>
                    @Html.TextBoxFor(m => m.tc, new { @readonly = "false", @class = "form-control", oninput = "TcNumber(this.id);", maxlength = "11", @required = "required", placeholder = "Lütfen 11 Haneli TC Kimlik Numaranızı Giriniz." })
                </td>
            </tr>
            <tr>
                <td>
                    <p><b>Telefon</b></p>
                    @Html.TextBoxFor(m => m.tel, new { @readonly = "false", @class = "form-control", id = "phoneNumber", oninput = "PhoneNumber(this.id);", maxlength = "17", @required = "required", placeholder = "Lütfen Başında 0 Olmadan 11 Haneli Telefon Numaranızı Giriniz." })

                </td>
                <td>
                    <p><b>E-Posta</b></p>
                    @Html.TextBoxFor(m => m.email, new { @readonly = "false", @class = "form-control", id = "email", type = "email", @required = "required", placeholder = "Lütfen Yöneticiye Ait Mail Adresini Doğru Girin." })
                </td>
            </tr>
            <tr>
                <td>
                    <p><b>Adres</b></p>
                    @Html.TextBoxFor(m => m.adres, new { @readonly = "false", oninput = "customtext(this.id);", @class = "form-control", @required = "required" })
                </td>
                <td>
                    <p><b>Cinsiyet</b></p>
                    @Html.TextBoxFor(m => m.gender, new { @readonly = "false", oninput = "customtext(this.id);", @class = "form-control", @required = "required" })
                </td>
            </tr>
            <tr>
                <td>
                    <p><b>Başlangıç Tarihi:</b></p>
                    <input class="form-control generatetext"  id="itarih1" placeholder="Lütfen Tarih Giriniz." />
                </td>
                <td>
                    <p><b>Bitiş Tarihi:</b></p>
                    <input class="form-control" id="itarih2" placeholder="Lütfen Tarih Giriniz." />
                </td>
            </tr>
            <tr>
                <td>
                    <p><b>İmza:</b></p>
                    <canvas class="jSignature" width="220" height="150"></canvas>
                </td>
                <td>
                    <div id="output" class="text-center"></div>
                </td>
            </tr>
        </table>
    </div>

</div>



<script src="~/Content/Admin/plugins/custom/jquery-ui.js"></script>
<script src="~/Content/Admin/plugins/custom/oasiscustom.js"></script>
<script src="~/Content/Admin/plugins/custom/qrcode.min.js"></script>


<script type="text/javascript">

    $(document).ready(function () {
        izintakvimi();
    });

</script>