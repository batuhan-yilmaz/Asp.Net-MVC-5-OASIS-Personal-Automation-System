@model List<OASIS.Models.Entity.region>



@if (TempData["regionGuncelle"] != null)
{
    <link href="~/Content/Admin/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/Content/Admin/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script>
        Swal.fire('Başarılı', 'İşlem gerçekleşti', 'success');
    </script>
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title"></h3>
        @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Yeni Bölge Ekle", "regionekle", null, new { @class = "fa fa-plus btn btn-primary" })
        }
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="region" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Bölge</th>
                    <th>Firma</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th>Güncelle</th>
                        <th>Sil</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var region in Model)
                {
                    <tr>
                        <td>@region.region1</td>
                        <td>@region.company.company1</td>


                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                            @Html.ActionLink("Güncelle", "regionguncelle", new { region.regionid }, new { @class = "fa fa-pencil-square-o btn btn-outline-primary" })
                            </td>
                            <td>                        
                            @Html.ActionLink("Sil", "regionsil", new { region.regionid }, new { @class = "fa fa-trash btn btn-outline-danger" })
                            </td>
                        }
                    </tr>
                }
            </tbody>

        </table>
    </div>
    </div>
