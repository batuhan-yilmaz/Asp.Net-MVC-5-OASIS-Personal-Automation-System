@model  OASIS.Models.Entity.invoice

    @{
        ViewBag.Title = "Fatura Detayı";
        Layout = "~/Areas/oasiscontrolcenter/Views/Shared/_Layout.cshtml";
        ViewBag.menuactive = "invoice";
    }

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="callout callout-info">
                            <h5><i class="fas fa-info"></i> Fatura Detayları:</h5>
                            
                        </div>


                        <!-- Main content -->
                        <div class="invoice p-3 mb-3">
                            <!-- title row -->
                            <div class="row">
                                <div class="col-12">
                                    <h4>
                                        <i class="fas fa-globe"></i> OASIS, Inc.
                                        <small class="float-right">@Html.DisplayFor(m => Model.date)</small>
                                    </h4>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- info row -->
                            <div class="row invoice-info">
                                <div class="col-sm-4 invoice-col">
                                    Firma
                                    <address>
                                        <strong>OASIS</strong><br>
                                        <strong>Adres:</strong> FSM Bulvarı NO:38<br>
                                        Nilüfer/BURSA 16159<br>
                                        <strong>Telefon:</strong> +90(5XX) XXX-XXXX<br>
                                        <strong>Email:</strong> oasiscontrolcenter@gmail.com
                                    </address>
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-4 invoice-col">
                                    Fatura Sahibi
                                    <address>
                                        <strong>@Model.namesurname</strong><br>
                                        <strong>Adres:</strong> @Model.adres<br>
                                        <strong>Tc:</strong> @Model.tc<br>
                                        <strong>Telefon:</strong> @Model.tel<br>
                                        <strong>Email:</strong> @Model.email
                                    </address>
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-4 invoice-col">
                                    Fatura Bilgileri
                                    <br>
                                    <b>Referans Numarası:</b> @Model.referancenumber<br>
                                    <b>İlgili Yönetici:</b> @Model.authorized.authorized1<br>
                                    <b>İlgili Personel:</b> @Model.personel.personel1
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                            <!-- Table row -->
                            <div class="row">
                                <div class="col-12 table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Ürün</th>
                                                <th>Açıklama</th>
                                                <th>Firma</th>
                                                <th>Bölge</th>
                                                <th>Birim</th>
                                                <th>Ara Toplam</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                                <tr>
                                                    <td>@Model.product</td>
                                                    <td>@Model.description</td>
                                                    <td>@Model.company.company1</td>
                                                    <td>@Model.region.region1</td>
                                                    <td>@Model.unit.unit1</td>
                                                    <td>@Model.subtotal</td>
                                                </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->

                            <div class="row">
                                <!-- accepted payments column -->
                                <div class="col-6">
                                    <p class="lead">Ödeme Şekli:</p>
                                    <img src="~/Content/Admin/dist/img/credit/@Model.pay" width="75" height="50" alt="Visa class">
                                    <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                                        Belgenin Aslı OASIS, Inc. 'ye Aittir Değiştirilemez ve Kopyalanamaz.
                                    </p>
                                </div>
                                <!-- /.col -->
                                <div class="col-6">
                                    <p class="lead">Ödenecek Tutar</p>

                                    <div class="table-responsive">
                                        <table class="table">
                                            <tr>
                                                <th style="width:50%">Ara Toplam</th>
                                                <td>@Model.subtotal</td>
                                            </tr>
                                            <tr>
                                                <th>Vergi (18%)</th>
                                                <td>@Model.tax</td>
                                            </tr>
                                            <tr>
                                                <th>Total:</th>
                                                <td>@Model.total</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                            <!-- this row will not appear when printing -->
                            <div class="row no-print">
                                <div class="col-12">
                                    <button onclick="javascript:window.print()" class="btn-print btn btn-warning"><i class="fas fa-print"></i>  Yazdır</button>
                                </div>
                            </div>
                        </div>
                        <!-- /.invoice -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
