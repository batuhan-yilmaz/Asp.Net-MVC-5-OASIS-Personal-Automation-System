@model List<OASIS.Models.Entity.company>

@if (TempData["companyGuncelle"] != null)
{
    <link href="~/Content/Admin/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/Content/Admin/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script>
        Swal.fire('Başarılı', 'İşlem gerçekleşti', 'success');
    </script>
}


                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"></h3>
                        @if (User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Yeni Firma Ekle", "companyekle", null, new { @class = "fa fa-plus btn btn-primary" })
                        }
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="company" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Firma</th>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <th>Güncelle</th>
                                        <th>Sil</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var company in Model)
                                {
                                    <tr>
                                        <td>@company.company1</td>


                                        @if (User.IsInRole("Admin"))
                                        {
                                            <td>
                                             @Html.ActionLink("Güncelle", "companyguncelle", new { company.companyid }, new { @class = "fa fa-pencil-square-o btn btn-outline-primary" })
                                            </td>
                                            <td>                                       
                                             @Html.ActionLink("Sil", "companysil", new { company.companyid }, new { @class = "fa fa-trash btn btn-outline-danger" })
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
